{% extends 'login.base.twig' %}

{% block title %}Se connecter - RaxorShop{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Navigation</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href=" {{ path('accueil') }}">Page d'accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=" {{ path('produit_index') }}">Voir les produits</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="">Espace administrateur</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_AGENT') %}
                    <li class="nav-item">
                        <a class="nav-link" href="">Espace agent</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="">Espace client</a>
                            <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </li>
                    {% endif %}
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('panier') }}">Mon panier</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=" {{ path('app_login') }}">Authentification</a>
                </li>

            </ul>
        </div>
    </nav>


    <form method="post">
        <div class="container">
            <div class="row">
                <h1 class="h3 mb-3 font-weight-normal">Connectez vous dès maintenant</h1>
            </div>
            <div class="row">
                <label for="inputEmail">Adresse Email :</label>
            </div>
            <div class="row">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       placeholder="Adresse Email" autocomplete="off" required autofocus>
            </div>
            <div class="row">
                <label for="inputPassword">Mot de passe :</label>
            </div>
            <div class="row">
                <input type="password" name="password" id="inputPassword" class="form-control"
                       placeholder="Mot de passe" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
            <div class="row">
                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}

                <button class="btn btn-lg btn-success" type="submit">Connexion</button>
                <a class="btn btn-lg btn-warning" href="{{ path('app_register') }}" id="inscription_link">S'inscrire</a>
            </div>
        </div>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </form>


{% endblock %}
