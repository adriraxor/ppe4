        <div class="col gauche">
            <a href="{{ path('gestion_produits') }}" class="btn btn-danger">Gestion des produits</a><br><br>
                <a href="" class="btn btn-danger">Gestion des ventes</a>
        </div>
        <div class="col droite">
            <a href="" class="btn btn-danger">Gestions des Users</a>
        </div>
    </div>
</div>
{% endblock %}
